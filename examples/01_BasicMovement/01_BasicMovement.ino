#include <DreamLink.h>

DreamLink probe;

void setup() {
  probe.begin();

  // Rule ง่ายๆ: เดินหน้าตลอดเวลา
  probe.when(ALWAYS).then(FORWARD, 100);

  probe.wakeup();

  Serial.println("Robot จะเดินหน้าตลอดเวลา");
  Serial.println("กด Ctrl+C เพื่อหยุด\n");
}

void loop() {
  probe.live();
}

